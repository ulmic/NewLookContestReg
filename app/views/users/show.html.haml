- if session[:user_id].nil?
  = render 'page_404'
- else
  %p
    %b Ф.И.О 
    = @user.first_name + " " + @user.middle_name + " " + @user.last_name
  %p  
    %b Дата рождения 
    = @user.birth_date 
  %p  
    %b Муниципальное образование 
    = @district.title
  %p  
    %b Место учёбы. Учебное заведение:  
    = @user.school
    %b Группа (класс)
    = @user.group
  %p
    %b Место работы: 
    = @user.job
    %b Должность 
    = @user.role
  %p
    %b Адрес: 
    = @user.city
    %b  ул. 
    = @user.street
    %b  д.
    = @user.house
    %b  строение
    = @user.building
    %b  квартира
    = @user.flat
  %p
    %b Контакты: Мобильный телефон 
    = @user.mobile_phone
    %b  Домашний телефон 
    = @user.home_phone
    %b  ICQ 
    = @user.icq
    %b  Email 
    = @user.email
    %b  Ник ВКонтакте 
    %a{:href => "http://vk.com/" + @user.vkontakte} 
      = @user.vkontakte
    %b Ник в Твиттере
    
    %a{:href => "http://twitter.com" + @user.twitter} 
      = @user.twitter
  %p
    %b Мероприятия, в которых принимал участие 
    = @user.events
  %p  
    %b Заслуги, награды
    = @user.honors
  %p
    %b СМИ, в которых публиковался
    = @user.media
