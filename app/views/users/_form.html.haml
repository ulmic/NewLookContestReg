= simple_form_for @user do |f|
  = if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  - f.with_options :input_html => {:class => :span6} do |f|
    .field
      = f.input :first_name
      = f.input :middle_name
      = f.input :last_name
      = f.label :district
      %select
        -for d in District.all
          %option{:value => d.id, :selected => d.id == 0}= d.title
      = f.label :birth_date
      = f.date_select :birth_date, :start_year => 1991, :end_year => 1999, :use_month_numbers => true 
      = f.input :school
      = f.input :group
      = f.input :job
      = f.input :role
      = f.input :city
      = f.input :street
      = f.input :house
      = f.input :building
      = f.input :flat
      = f.input :mobile_phone
      = f.input :home_phone
      = f.input :icq
      = f.input :email
      = f.input :vkontakte
      = f.input :twitter
      = f.label :events
      = f.text_area :events, :class => :span6, :row => 5
      = f.label :honors
      = f.text_area :honors, :class => :span6, :row => 5
      = f.label :media
      = f.text_area :media, :class => :span6, :row => 5
    .actions
      = f.submit "Отправить", :class => "btn btn-large btn-success"
