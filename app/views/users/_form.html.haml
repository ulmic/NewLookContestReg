= javascript_include_tag :users

= simple_form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  - f.with_options input_html: { class: :span6 }, html: { multipart: true } do |f|
    .field
      = f.input :first_name, as: :string
      = f.input :middle_name, as: :string
      = f.input :last_name, as: :string
      = f.input :birth_date, as: :date_picker
      = f.input :school, as: :string
      = f.input :group, as: :string
      = f.input :job, as: :string
      = f.input :role, as: :string
      = f.input :municipality
      = f.input :city, as: :string
      = f.input :street, as: :string
      = f.input :house, as: :string
      = f.input :building, as: :string
      = f.input :flat, as: :string
      = f.input :mobile_phone, placeholder: "Телефон обязателен для связи с организаторами", as: :string
      = f.input :skype, as: :string
      = f.input :email, placeholder: "Email обязателен для получения информации и конкурсе", as: :string
      = f.input :password, as: :string, placeholder: t('.this_password_for_sign_in')
      = f.input :vkontakte, as: :string
      = f.input :twitter, as: :string
      = f.label :events
      = f.text_area :events, class: :span6, row: 5, placeholder: "Напишите мероприятия журналистской или иной направленности, в которых принимали участие"
      = f.label :honors
      = f.text_area :honors, class: :span6, row: 5, placeholder: "Напишите свои достижения в области журналистики и публицистики"
      = f.label :media
      = f.text_area :media, class: :span6, row: 5, placeholder: "В случае электронных СМИ со ссылками на конкретные работы"
      %hr
      = f.label :portfolio
      = f.file_field :portfolio
      %br
      %small Все публикации (их сканы, документы Word и др.). должны быть заархивированы. Пользователь может загрузить только один архив.
      %hr
      != t('hints.users.new.accept_agreement')
      = f.label :accept_agreement
      = f.check_box :accept_agreement, as: :boolean
    .actions
      = f.submit "Отправить", class: "btn btn-large btn-success", id: :send_request
