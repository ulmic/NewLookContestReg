ru:
  activerecord:
    models:
      user: Пользователь
    attributes:
      user:
        first_name: Фамилия
        middle_name: Имя
        last_name: Отчество
        birth_date: Дата рождения
        city: Населённый пункт
        phone: Телефон
        mobile_phone: Мобильный телефон
        district_id: Муниципальное образование
        flat: Квартира
        group: Группа (класс)
        home_phone: Домашний телефон
        house: Дом
        icq: ICQ
        job: Работа
        role: Должность
        school: Учебное заведение
        street: Улица
        twitter: Ник в твиттере
        vkontakte: Ник во ВКонтакте
        events: Мероприятия, в которых принимал участие
        honors: Награды
        media: СМИ, в которых публиковался
        building: Строение
        portfolio: Портфолио
      public_work:
        title: Название
        text: Текст работы
        header: Руководитель
        header_coordinates: Контакты руководителя
        annotation: Аннотация
        video_link: Ссылка на видео
        nomination: Номинация
